<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6" tools:ignore="RtlSymmetry">

    <TextView
            android:id="@+id/tv_item_num"
            android:layout_width="@dimen/dp_28"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/sp_16"/>

    <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/common_gray"
            android:text="···"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_8"
            android:textSize="@dimen/sp_20"/>

    <ImageView
            android:id="@+id/ic_item_play"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/music_ic_play"
            android:layout_toLeftOf="@id/tv_more"
            android:tint="#acabab"/>

    <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_toLeftOf="@+id/ic_item_play"
            android:layout_toRightOf="@id/tv_item_num"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/common_black"
            android:textSize="@dimen/sp_14"/>

    <TextView
            android:id="@+id/tv_item_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_name"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toLeftOf="@+id/ic_item_play"
            android:layout_toRightOf="@+id/tv_item_num"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/sp_12" />

    <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_item_autor"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@+id/tv_item_num"
            android:background="#aac7c7c7" />
</RelativeLayout>